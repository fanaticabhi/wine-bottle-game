<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/table2"
     tools:context="com.example.abhi.winebottlegame.main">

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:gravity="center_horizontal"
      android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:weightSum="3">

      <TextView
          android:id="@+id/firstno"
          android:layout_width="0dp"
          android:layout_height="100dp"
          android:textSize="50dp"
          android:layout_marginVertical="10dp"
          android:layout_marginHorizontal="15dp"
          android:gravity="center"
          android:layout_weight="1"
          android:textColor="	#996515"

          android:background="@drawable/goldcoin"

         />

    <TextView
        android:id="@+id/secondno"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:textSize="50dp"
        android:gravity="center"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_weight="1"
        android:textColor="	#996515"

        android:background="@drawable/goldcoin"

        />

    <TextView
        android:id="@+id/thirdno"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_height="100dp"
        android:textSize="50dp"
        android:background="@drawable/goldcoin"
        android:layout_weight="1"
        android:textColor="	#996515"


        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:layout_height="480dp"
        android:gravity="center">
<android.support.v7.widget.CardView
    android:layout_width="410dp"
    android:layout_height="410dp"
    app:cardElevation="1dp"
    android:backgroundTint="#0000">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/americanroulette"
      android:gravity="center">


    <ImageView
        android:id="@+id/bottle"
        android:layout_marginTop="15dp"
        android:layout_width="190dp"
        android:layout_height="230dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/bottle"/>
  </LinearLayout>

</android.support.v7.widget.CardView>

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:text="go"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="25dp"
        android:background="@drawable/buttonstyle"
        android:layout_width="160dp"
        android:layout_height="wrap_content" />
  </LinearLayout>

</RelativeLayout>
