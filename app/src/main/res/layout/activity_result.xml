<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abhi.winebottlegame.result"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/table2">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/firstno"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:textSize="50dp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="15dp"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="	#996515"

                android:background="@drawable/goldcoin"

                />

            <TextView
                android:id="@+id/secondno"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:textSize="50dp"
                android:gravity="center"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="15dp"
                android:layout_weight="1"
                android:textColor="	#996515"

                android:background="@drawable/goldcoin"

                />

            <TextView
                android:id="@+id/thirdno"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="15dp"
                android:layout_height="100dp"
                android:textSize="50dp"
                android:background="@drawable/goldcoin"
                android:layout_weight="1"
                android:textColor="	#996515"


                />
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"

        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="0dp">


        <TextView
            android:id="@+id/congrats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONGRATULATIONS"
            android:textColor="#ddd"
            android:textStyle="bold"
            android:textSize="40dp"/>
        <TextView
            android:id="@+id/resulttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YOU WIN"
            android:textColor="#ddd"
            android:textStyle="bold"
            android:textSize="50dp"/>

        <TextView
            android:id="@+id/totalcoins"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:textSize="50dp"
            android:gravity="center"
            android:textColor="	#996515"
            android:background="@drawable/goldcoin"

            />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="30dp"
            android:weightSum="2">
            <Button
                android:id="@+id/playagain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play again"
                android:textSize="25dp"
                android:textColor="#fff"
                android:background="@drawable/buttonstyle"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exit"
                android:textSize="25dp"
                android:textColor="#fff"
                android:background="@drawable/buttonstyle"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"/>


        </LinearLayout>
    </LinearLayout>



</RelativeLayout>
